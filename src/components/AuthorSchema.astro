---
import { Schema } from 'astro-seo-schema';
import siteDefaults from '../data/siteData.json';

const { seo: seoOverrides = {} } = Astro.props; // Get page-specific overrides
const seo = { ...siteDefaults.default, ...seoOverrides }; // Merge defaults with overrides

---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: seo.contact.name,
    website: seo.contact.website,
    email: seo.contact.email,
    knowsAbout: seo.contact.knowsAbout,
    birthDate: seo.contact.birthDate,
    westernzodiacSign: seo.contact.westernzodiacSign,
    vedicmoonSign: seo.contact.vedicmoonSign
  }}
/>