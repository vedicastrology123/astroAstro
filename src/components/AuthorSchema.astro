---
import { Schema } from 'astro-seo-schema';
import siteDefaults from '../data/siteData.json';

const { seo: seoOverrides = {} } = Astro.props; // Get page-specific overrides
const seo = { ...siteDefaults.default, ...seoOverrides }; // Merge defaults with overrides

---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: siteDefaults.contact.name,
    website: siteDefaults.contact.website,
    email: siteDefaults.contact.email,
    knowsAbout: siteDefaults.contact.knowsAbout,
    birthDate: siteDefaults.contact.birthDate,
    westernzodiacSign: siteDefaults.contact.westernzodiacSign,
    vedicmoonSign: siteDefaults.contact.vedicmoonSign
  }}
/>